<div class="row">
  <div data-hook="admin_vendor_form_fields" class="col-xs-12 col-md-6">
    <div data-hook="variants">

      <div class="form-group" data-hook="name">
        <%= f.label :name, Spree.t(:name) %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group" data-hook="price">
        <%= f.label :address, Spree.t(:address) %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <div class="form-group" data-hook="cost_price">
        <%= f.label :commission, Spree.t(:commission) %>
        <div class="input-group">
        <%= f.number_field :commission, value: number_to_currency(@vendor.commission, unit: ''), class: 'form-control' %>
        <div class="input-group-addon">%</div>
        </div>
      </div>
    </div>
  </div>
</div>